@model ProyectoFinal_Aplicacion_To_Do.Models.Tarea

@{
    ViewBag.Title = "Editar Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>✏️ Editar Tarea</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo)
            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaVencimiento)
            @Html.TextBoxFor(model => model.FechaVencimiento, "{0:yyyy-MM-dd}",
                new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prioridad)
            @Html.DropDownListFor(
                model => model.Prioridad,
                new SelectList(new[]
                {
                    new { Value = 1, Text = "Baja" },
                    new { Value = 2, Text = "Media" },
                    new { Value = 3, Text = "Alta" }
                }, "Value", "Text", Model.Prioridad),
                "Seleccione prioridad",
                new { @class = "form-control" }
            )
        </div>

        <div class="form-check mt-3">
            @Html.CheckBoxFor(model => model.Completada, new { @class = "form-check-input" })
            @Html.LabelFor(model => model.Completada, new { @class = "form-check-label" })
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>
