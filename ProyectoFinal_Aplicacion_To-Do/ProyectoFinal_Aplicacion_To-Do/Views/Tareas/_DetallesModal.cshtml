@model ProyectoFinal_Aplicacion_To_Do.Models.Tarea

<div class="modal fade" id="detallesModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Detalles de la Tarea</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">Título</dt>
                    <dd class="col-sm-8">@Model.Titulo</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4">Fecha de creación</dt>
                    <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Fecha de vencimiento</dt>
                    <dd class="col-sm-8">
                        @(Model.FechaVencimiento.HasValue
                            ? Model.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                            : "Sin fecha")
                    </dd>

                    <dt class="col-sm-4">Prioridad</dt>
                    <dd class="col-sm-8">@Model.Prioridad</dd>

                    <dt class="col-sm-4">Completada</dt>
                    <dd class="col-sm-8">
                        @(Model.Completada ? "Sí" : "No")
                    </dd>
                </dl>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-primary"
                        onclick="irAEditar(@Model.Id)">
                    Editar
                </button>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cerrar
                </button>
            </div>

        </div>
    </div>
</div>
