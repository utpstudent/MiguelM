@model parcial3.Models.Articulo

@{
    ViewBag.Title = "Eliminar Artículo";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    <h4><i class="glyphicon glyphicon-warning-sign"></i> ¿Está seguro que desea eliminar este artículo?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div>
    <h4>Información del artículo a eliminar:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd>@Html.DisplayFor(model => model.Titulo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Autores)</dt>
        <dd>@Html.DisplayFor(model => model.Autores)</dd>

        <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd>@Html.DisplayFor(model => model.Estado)</dd>

        <dt>@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
        <dd>@Html.DisplayFor(model => model.FechaRegistro)</dd>

        @if (Model.FechaPublicacion.HasValue)
        {
            <dt>@Html.DisplayNameFor(model => model.FechaPublicacion)</dt>
            <dd>@Html.DisplayFor(model => model.FechaPublicacion)</dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ArticuloID)

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">
                <i class="glyphicon glyphicon-trash"></i> Sí, eliminar
            </button>
            @Html.ActionLink("Cancelar", "Detalles", new { id = Model.ArticuloID },
                new { @class = "btn btn-default" })
        </div>
    }
</div>