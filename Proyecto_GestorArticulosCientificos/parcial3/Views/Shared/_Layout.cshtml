<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestor de Artículos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 70px;
        }

        .navbar-brand {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestor Científico", "Index", "Articulos",
                    new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Articulos")</li>
                    <li>@Html.ActionLink("Artículos", "Lista", "Articulos")</li>
                    <li>@Html.ActionLink("Nuevo", "Crear", "Articulos")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Mike Matt</a></li>
                    <li>@Html.ActionLink("Salir", "Logout", "Account")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["Mensaje"]
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Gestión de Artículos Científicos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>